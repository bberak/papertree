<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Sets cursor color. -->
       <item name="colorControlActivated">@android:color/black</item>

       <!-- Set themes for date and time picker dialogs -->
       <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
       <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#03498F</item>
        <item name="android:textColorPrimary">#03498F</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- Disable window features like ActionBar, Title and Overlay. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/screen</item>
    </style>

</resources>

